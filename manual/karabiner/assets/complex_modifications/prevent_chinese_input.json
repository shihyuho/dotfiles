{
  "title": "Auto-switch to English when holding left modifier keys",
  "rules": [
    {
      "description": "Switch to English when left Ctrl/Option/Command is pressed (auto switch back on release)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_control"
          },
          "to": [
            {
              "select_input_source": {
                "input_source_id": "com.apple.keylayout.ABC"
              }
            },
            {
              "key_code": "left_control"
            }
          ],
          "to_after_key_up": [
            {
              "select_input_source": {
                "input_mode_id": "com.apple.inputmethod.TCIM.Zhuyin"
              }
            }
          ],
          "conditions": [
            {
              "type": "input_source_if",
              "input_sources": [
                {
                  "input_mode_id": "^com\\.apple\\.inputmethod\\.TCIM\\.Zhuyin"
                }
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "left_option"
          },
          "to": [
            {
              "select_input_source": {
                "input_source_id": "com.apple.keylayout.ABC"
              }
            },
            {
              "key_code": "left_option"
            }
          ],
          "to_after_key_up": [
            {
              "select_input_source": {
                "input_mode_id": "com.apple.inputmethod.TCIM.Zhuyin"
              }
            }
          ],
          "conditions": [
            {
              "type": "input_source_if",
              "input_sources": [
                {
                  "input_mode_id": "^com\\.apple\\.inputmethod\\.TCIM\\.Zhuyin"
                }
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "left_command"
          },
          "to": [
            {
              "select_input_source": {
                "input_source_id": "com.apple.keylayout.ABC"
              }
            },
            {
              "key_code": "left_command"
            }
          ],
          "to_after_key_up": [
            {
              "select_input_source": {
                "input_mode_id": "com.apple.inputmethod.TCIM.Zhuyin"
              }
            }
          ],
          "conditions": [
            {
              "type": "input_source_if",
              "input_sources": [
                {
                  "input_mode_id": "^com\\.apple\\.inputmethod\\.TCIM\\.Zhuyin"
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
